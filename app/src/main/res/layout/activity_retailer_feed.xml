<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/devine1"
    tools:context=".RetailerFeedActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rflogo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">


    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/card_bg"
            android:orientation="vertical"
            android:padding="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Smart Feedback"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="How satisfied are you with?"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/button_area"
                    android:padding="8dp">

                    <RadioGroup
                        android:id="@+id/quality_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Quality of Brands"
                            android:background="@drawable/text_area"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/highly_dissatisfied1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/highly_dissatisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/dissatisfied1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dissatisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/neutral1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/neutral" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/satisfied1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/satisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/highly_satisfied1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/highly_satisfied" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/button_area"
                    android:padding="8dp"
                    >

                    <RadioGroup
                        android:id="@+id/price_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/text_area"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="In Store Experience"
                            android:textColor="@color/black"
                            android:textSize="16sp"

                            android:textStyle="bold" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/highly_disssatisfied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/highly_dissatisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/dissatisfied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dissatisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/neutral"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/neutral" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/satisfied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/satisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/highly_satisfied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/highly_satisfied" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/button_area"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/store_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Store Attendant Support"
                            android:background="@drawable/text_area"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/highly_dissatisfied2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/highly_dissatisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/dissatisfied2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dissatisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/neutral2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/neutral" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/satisfied12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/satisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/highly_satisfied2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/highly_satisfied" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"

                    android:background="@drawable/button_area"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/access_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Store Accessibility"
                            android:background="@drawable/text_area"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/highly_dissatisfied3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/highly_dissatisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/dissatisfied3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dissatisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/neutral3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/neutral" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/satisfied3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/satisfied" />

                        <RadioButton
                            android:buttonTint="@color/colorRadio"
                            android:id="@+id/highly_satisfied3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/highly_satisfied" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:padding="8dp"
                android:background="@drawable/button_area"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/text_area"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="How did you learn about us?"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                <RadioGroup
                    android:id="@+id/source_group"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal"
                    >


                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/fb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/insta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instagram" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Twitter" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/wof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Word of mouth" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/bb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Billboards" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/celeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Celebrities" />


                </RadioGroup>
                </HorizontalScrollView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_area"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/text_area"

                    android:layout_margin="8dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"

                        android:text="How likely are you to recommend us?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:padding="8dp"
                        android:text="(1)Less likely (10) Most Likely"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/recommend_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal"
                    android:padding="8dp">

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/seven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/eight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/nine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/ten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="What is your preferred way of shopping?"
                    android:background="@drawable/text_area"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <RadioGroup
                    android:id="@+id/shop_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >



                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/in_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In-store" />

                    <RadioButton
                        android:buttonTint="@color/colorRadio"
                        android:id="@+id/online"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Online" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/areastv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_area"
                    android:hint="Suggestions on areas of improvements?"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/suggestiontv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_area"
                    android:hint="Suggestions on what we should stock?"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_area"
                    android:hint="Your name (optional)"
                    android:padding="16dp" />


                <EditText
                    android:id="@+id/phoneTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_area"
                    android:hint="Your phone number (optional)"
                    android:padding="16dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submitBt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:padding="16dp"
                    android:text="Submit"
                    android:textColor="@color/white" />


            </LinearLayout>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Powered By Enigma Analytics"
                android:layout_margin="8dp"
                android:textStyle="italic"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>